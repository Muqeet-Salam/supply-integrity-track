# Vite environment variables for the frontend
# Copy to supplied-main/.env and edit values for local development

# Where the frontend should call the backend API
VITE_API_BASE_URL=http://localhost:5000/api

# Blockchain RPC and chain config (used by wallet helpers / mock contract)
VITE_RPC_URL=http://127.0.0.1:8545
VITE_CHAIN_ID=11155111
VITE_CHAIN_NAME=Sepolia

# Public app URL (used in metadata / links)
VITE_APP_URL=http://localhost:5173

# Toggle to make frontend call the real backend API (instead of purely mocked services)
# Set to 'true' to enable real API calls to `VITE_API_BASE_URL`.
VITE_USE_REAL_API=false
# Blockchain Configuration
VITE_CHAIN_ID=11155111
VITE_CHAIN_NAME=Sepolia
VITE_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Smart Contract (add after deployment)
VITE_CONTRACT_ADDRESS=

# Backend API
VITE_API_BASE_URL=http://localhost:5000/api

# App URL (for QR code deep linking)
VITE_APP_URL=https://yourapp.vercel.app
